{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/_next/static/(.*)",
      "dest": "dist/client/_next/static/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "dist/client/static/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "api/server.js"
    }
  ]
}